<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    >


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:layout_centerInParent="true"
        >

        <!-- Payment -->

        <RelativeLayout
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:layout_margin="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:alpha="0.3"
                >


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                >


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_settings_payment_white_24"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_gravity="center_horizontal"
                    />




            </LinearLayout>




        </RelativeLayout>

        <!-- Notifications -->

        <RelativeLayout
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:layout_margin="10dp"
            >
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.3"
                android:background="@color/white"
                ></LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_settings_notifications_white_24"
                    android:layout_marginBottom="8dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notifications"
                    android:textStyle="bold"
                    android:textSize="12sp"

                    />


            </LinearLayout>
            
            



        </RelativeLayout>

        <!-- Account -->

        <RelativeLayout
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:layout_margin="10dp"
            >
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:alpha="0.3"
                ></LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_settings_account_white_24"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Account"
                    android:textStyle="bold"
                    android:textSize="12sp"

                    />


            </LinearLayout>
            
            



        </RelativeLayout>

        <!-- Privacy -->

        <RelativeLayout
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:layout_margin="10dp"
            >
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:alpha="0.3"
                ></LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_settings_privacy_24dp"
                    android:layout_marginBottom="8dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Privacy"
                    android:textStyle="bold"
                    android:textSize="12sp"

                    />

            </LinearLayout>


            

        </RelativeLayout>

        <!-- More -->

        <RelativeLayout
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:layout_margin="10dp"
            >
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:alpha="0.3"
                ></LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_settings_more_24dp"
                    android:layout_marginBottom="8dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="More"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    />

            </LinearLayout>
            



        </RelativeLayout>

        <!-- About us -->

        <RelativeLayout
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:layout_margin="10dp"
            >
            
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:alpha="0.3"
                ></LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                >


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_settings_aboutus_24dp"
                    android:layout_marginBottom="8dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="About Us"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    />


            </LinearLayout>





        </RelativeLayout>


    </GridLayout>
    

</RelativeLayout>